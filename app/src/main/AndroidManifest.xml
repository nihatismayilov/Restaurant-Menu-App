<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantmenu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantMenu">
        <activity android:name=".Burgers"></activity>
        <activity
            android:name=".Burger"
            android:label="@string/title_activity_burger"
            android:theme="@style/Theme.RestaurantMenu.NoActionBar" />
        <activity android:name=".Dessert" />
        <activity android:name=".Drink" />
        <activity android:name=".Salad" />
        <activity android:name=".Pizza" />
        <activity android:name=".Foods" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>